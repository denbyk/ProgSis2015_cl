<Window x:Class="ProgettoClient.RecoverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecoverWindow" Height="486.17" Width="614.894">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Recover" Content="Recover files" HorizontalAlignment="Left" Margin="505,394,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <ListView x:Name="recoverListView" HorizontalAlignment="Left" Height="389" VerticalAlignment="Top" Width="607">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="350" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Last Modify" Width="50" DisplayMemberBinding="{Binding Mail}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
